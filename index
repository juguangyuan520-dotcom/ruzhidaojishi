<body>
  <div class="container">
    <div class="title">已经为极兔打工了</div>
    <div class="counter" id="days">0天</div>
  </div>

  <script>
    const startDate = new Date('2021-12-03');
    const today = new Date();

    // 只保留日期部分
    startDate.setHours(0, 0, 0, 0);
    today.setHours(0, 0, 0, 0);

    const diffTime = today - startDate;
    const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));

    document.getElementById("days").textContent = `${diffDays} 天`;
  </script>
